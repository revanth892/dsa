
//SELECTION SORT
#include <iostream>

using namespace std;
void swap(int *a, int *b)
{
    int temp =*a;
    *a=*b;
    *b=temp;
}

int main()
{   int j,min_idx;
    int a[5]={20,19,18,17,11};
    for(int i=0;i<5-1;i++)
    {
        min_idx=i;
        for(j=i+1;j<5;j++)
        {
            if(a[j]< a[min_idx])
            {
                min_idx=j;
            }
        }
        swap(&a[min_idx],&a[i]);
    }
    for(int i=0;i<5;i++)
    {
        std::cout << a[i] << std::endl;
    }
    return 0;
}
